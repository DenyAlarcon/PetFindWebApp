@model PetFindWebApplication.Models.User

@{
    ViewData["Title"] = "Register";
}

<h1>Регистрация</h1>

<form asp-action="Register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Username">Логин</label>
            <input asp-for="Username" type="text" class="form-control" id="username" placeholder="Логин" name="username">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Email">Почта</label>
            <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Почта" name="email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="FirstName">Имя</label>
            <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder="Имя" name="firstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="TelNumber">Мобильный номер</label>
            <input asp-for="TelNumber" type="tel" class="form-control" id="telNumber" placeholder="Мобильный номер" name="telNumber">
            <span asp-validation-for="TelNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Password">Пароль</label>
            <input type="password" class="form-control" id="password1" placeholder="Пароль" name="password">
            <span class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Password">Подтвердите пароль</label>
            <input asp-for="Password" type="password" class="form-control" id="password2" placeholder="Подтвердите пароль" name="password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-danger">Зарегистрироваться</button>
</form>
