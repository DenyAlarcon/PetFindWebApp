@model PetFindWebApplication.Models.User

@{
    ViewData["Title"] = "Login";
}

<h1>Авторизация</h1>

<form asp-action="login" asp-controller="Accounts" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Username">Логин</label>
            <input asp-for="Username" type="text" class="form-control" id="Username" placeholder="Логин" name="username">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Пароль" name="password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <button type="submit" class="btn btn-danger">Войти</button>
        </div>
        <div class="form-group col-md-4 text-right">
            <a class="nav-link text-danger pl-0" asp-area="" asp-controller="Accounts" asp-action="Register">Нет аккаунта? Зарегистрироваться</a>
        </div>
    </div>
</form>

