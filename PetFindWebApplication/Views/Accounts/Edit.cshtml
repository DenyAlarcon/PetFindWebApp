@model PetFindWebApplication.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактирование</h1>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" name="id"/>
    <div class="form-group col-md-4">
        <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" class="form-control" name="username"/>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control" name="firstName"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" name="email"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" name="password"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="TelNumber" class="control-label"></label>
        <input asp-for="TelNumber" class="form-control" name="telNumber"/>
        <span asp-validation-for="TelNumber" class="text-danger"></span>
    </div>
    <hr />
    <div class="form-group col-md-4">
        <input type="submit" value="Сохранить" class="btn btn-danger" />
    </div>
</form>

